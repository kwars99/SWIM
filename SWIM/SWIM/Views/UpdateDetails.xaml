<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SWIM.ViewModels"
             x:Class="SWIM.Views.UpdateDetails"
             Title="Update Details"
             Style="{StaticResource PageStyle}">

    <ContentPage.BindingContext >
        <local:UpdateDetailsViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame>
                    <Label Text="Select Account" FontSize="Large"/>
                </Frame>
                <Frame>
                    <StackLayout>
                        <Entry x:Name="addressEntry" Placeholder="Enter Address"/>
                        <Entry x:Name="emailEntry" Placeholder="Enter Email"/>
                        <Button Text="Update" Clicked="Button_Clicked"/>
                    </StackLayout>                    
                </Frame>
                <CollectionView x:Name="Collection" ItemsSource="{Binding FormattedUsers}" SelectionMode="Single" SelectionChanged="CollectionView_SelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>                                
                                <Frame>
                                    <StackLayout>
                                        <Label Text="{Binding Fullname}"/>
                                        <Label Text="{Binding Address}"/>
                                        <Label Text="{Binding Email}"/>
                                    </StackLayout>
                                </Frame>                                
                            </StackLayout>                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>                
            </StackLayout>
        </ScrollView>


