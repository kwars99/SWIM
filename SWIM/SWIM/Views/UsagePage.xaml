<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWIM.Views.UsagePage"
             Title="Usage">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid RowDefinitions="*, Auto, Auto, 50">
                    <!-- Current Usage -->
                    <Frame Margin="10">
                        <Grid RowDefinitions="*, 200, *">
                            <Label Grid.Row="0" 
                                   HorizontalTextAlignment="Center"
                                   FontSize="Medium"
                                   Text="Current Usage" />
                            <BoxView Grid.Row="1"
                                     Color="Gray" />
                            <Grid Grid.Row="2">
                                <RadioButton FontSize="Small"
                                             HorizontalOptions="Center" 
                                             Content="Usage"
                                             GroupName="UsageCostSwitch"
                                             IsChecked="True" />
                                <RadioButton FontSize="Small" 
                                             HorizontalOptions="Center" 
                                             Grid.Column="1" 
                                             Content="Cost"
                                             GroupName="UsageCostSwitch" />
                            </Grid>
                        </Grid>
                    </Frame>
                    
                    <!-- Monthly Usage -->
                    <Frame Grid.Row="1" Margin="10, 0, 10, 10">
                        <StackLayout>
                            <Label FontSize="Medium" Text="March:" />
                            <Label Text="-Usage Information &amp; Cost" />
                            <Label FontSize="Medium" Text="April:" />
                            <Label Text="-Usage Information &amp; Cost" />
                            <Label FontSize="Medium" Text="May:" />
                            <Label Text="-Usage Information &amp; Cost" />
                        </StackLayout>
                    </Frame>
                    
                    <!-- Previous Quarters -->
                    <Frame Grid.Row="2" Margin="10, 0, 10 , 10">
                        <Grid>
                            <Label Text="December - February" />
                            <Label Grid.Column="1" 
                                   Text="kL" />
                            <Label Grid.Column="2" 
                                   Text="Cost" />
                            <Label Grid.Row="1" 
                                   Text="September - October" />
                            <Label Grid.Row="1" Grid.Column="1" 
                                   Text="kL" />
                            <Label Grid.Row="1" Grid.Column="2" Text="Cost" />
                        </Grid>
                    </Frame>
                    
                    <!-- Report Usage Button -->
                    <Button Grid.Row ="3" Margin="10, 0, 10, 10"
                            Text="Report a Usage" />
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>