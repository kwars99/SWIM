<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:SWIM.ViewModels"
             x:Class="SWIM.Views.DashBoard"
             Title="Dashboard"
             Style="{StaticResource PageStyle}">

    <ContentPage.BindingContext>
        <local:DashBoardViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Picker x:Name="Properties" Title="Select Property">
                    <Picker.Items>
                        <x:String>Home</x:String>
                        <x:String>Apartment</x:String>
                    </Picker.Items>

                </Picker>

                <Frame>
                    <StackLayout>
                        <StackLayout BindableLayout.ItemsSource="{Binding BillUsage}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label Text="{Binding Cost, StringFormat= '{0: Outstanding Bill of $###.##}'}"
                                               FontSize="Medium"
                                               HorizontalTextAlignment="Center"
                                               TextColor="Red"/>
                                        <Label Text="{Binding TimePeriod}"
                                               FontSize="Small"
                                               HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding TotalUsage, StringFormat='{0: Usage Amount: ##.# kL}'}"
                                               HorizontalTextAlignment="Center"/>

                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="{Binding DueDate}"
                                   FontSize="Medium"
                                   HorizontalTextAlignment="Center"
                                   TextColor="red"
                                   FontAttributes="Bold"/>
                            <Button Text="Pay Bill"
                                    Clicked="Button_Clicked"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                

                <Frame Padding="0,0,0,0" Margin="10,0,10,0" BorderColor="Black" HeightRequest="240">
                    <StackLayout>
                        <Label Text="Overview" HorizontalTextAlignment="Center" HeightRequest="150" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,5,5,0"/>

                        <Label Text="Usage Tracker" HorizontalTextAlignment="Center" HeightRequest="75" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,0,5,0"/>
                        
                    </StackLayout>
                </Frame>

                <Frame Padding="0,0,0,0" Margin="10,0,10,0" BorderColor="Black" HeightRequest="150">
                    <Label Text="Weather Updates" HorizontalTextAlignment="Center" HeightRequest="140" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,5,5,5"/>
                </Frame>


                <Frame Padding="0,0,0,0" Margin="10,0,10,0" BorderColor="Black" HeightRequest="150">
                    <Label Text="News and Tips" HorizontalTextAlignment="Center" HeightRequest="140"
                           VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,5,5,5"/>
                </Frame>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>