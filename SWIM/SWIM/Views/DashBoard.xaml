<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWIM.Views.DashBoard">
             
    <ContentPage.Content>
        <StackLayout Padding="10,20,10,20" Margin="10,10,10,30" VerticalOptions="Start">
            <StackLayout>

                <Picker x:Name="Properties" Title="Select Property">
                    <Picker.Items>
                        <x:String>Home</x:String>
                        <x:String>Apartment</x:String>
                    </Picker.Items>

                </Picker>

                

                <Frame Padding="0,0,0,0" Margin="10,0,10,0" BorderColor="Black" HeightRequest="225">
                    <StackLayout>
                        <Label Text="Overview" HorizontalTextAlignment="Center" HeightRequest="100" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,5,5,0"/>

                        <Label Text="Usage Tracker" HorizontalTextAlignment="Center" HeightRequest="50" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,0,5,0"/>

                        <Label Text="Payment Reminder" HorizontalTextAlignment="Center" HeightRequest="50" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,0,5,5"/>

                    </StackLayout>
                     
                </Frame>

                <Frame Padding="0,0,0,0" Margin="10,0,10,0" BorderColor="Black" HeightRequest="75">
                   <Label Text="Weather Updates" HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,5,5,5"/>
                    
                </Frame>

                <Frame Padding="0,0,0,0" Margin="10,0,10,0" BorderColor="Black" HeightRequest="100">
                    <Label Text="News and Tips" HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center" BackgroundColor="LightBlue" Margin="5,5,5,5"/>

                </Frame>


            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>